<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eae9e9">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top"
                    android:background="@drawable/top_background"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:clipToPadding="false">
        <ImageView
            android:id="@+id/return_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/returnkey_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检 测 对 象"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <TextView android:id="@+id/tv_add"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="新 增"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="15dp"
                  android:layout_marginRight="25dp"
                  android:textColor="#ffffff"
                  android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title"
        android:layout_below="@+id/top"
        android:orientation="horizontal"
        android:background="@drawable/title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="#121112" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="对象"
            android:textColor="#121112" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="材质"
            android:textColor="#121112" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="型号"
            android:textColor="#121112" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="等级"
            android:textColor="#121112" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="梯度值"
            android:textColor="#121112" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="应力值"
            android:textColor="#121112" />
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:divider="#B4B3B3"
        android:dividerHeight="1.0dip"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="1dp"
        android:scrollbarStyle="outsideInset"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@color/gray_text"
        android:scrollbarSize="7dp"
        android:layout_above="@+id/bottom_item"
        android:layout_below="@+id/title">
    </ListView>

    <LinearLayout
        android:orientation="vertical"
        android:background="#c7c7c7"
        android:id="@id/bottom_item"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/gray_text"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>

        <LinearLayout
            android:background="#c7c7c7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_choose"
                android:background="@drawable/choose"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="选取"
                android:paddingLeft="35dp"
                android:textColor="#121112"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_revise"
                android:background="@drawable/revise"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="修改"
                android:paddingLeft="35dp"
                android:textColor="#121112"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_delete"
                android:background="@drawable/delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="删除"
                android:paddingLeft="35dp"
                android:textColor="#121112"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

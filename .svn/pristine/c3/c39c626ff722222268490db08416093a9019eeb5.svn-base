<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:background="@drawable/top_background"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:clipToPadding="false"
        android:id="@+id/top">

        <ImageView
            android:id="@+id/return_key"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingBottom="18dp"
            android:paddingLeft="20dp"
            android:src="@drawable/returnkey_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="修 改 检 测 对 象"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView android:id="@+id/btn_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完 成"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="25dp"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:text="检测对象名称    :"
                android:textAllCaps="false"
                android:textColor="#3f3b3e"
                android:textSize="16sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:background="@drawable/pane"
                android:textColor="#3f3b3e"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:text="材                 质   :"
                android:textAllCaps="false"
                android:textColor="#3f3b3e"
                android:textSize="16sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/material"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:background="@drawable/pane"
                android:textColor="#3f3b3e"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:text="型                 号   :"
                android:textAllCaps="false"
                android:textColor="#3f3b3e"
                android:textSize="16sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:background="@drawable/pane"
                android:textColor="#3f3b3e"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_defectLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:text="缺   陷   等   级   : "
                android:textAllCaps="false"
                android:textColor="#3f3b3e"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/defectLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.9"
                android:background="@drawable/pane"
                android:textColor="#3f3b3e"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#c7c7c7"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/strigon1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:text="磁 场  梯 度 值   :"
                android:textAllCaps="false"
                android:textColor="#3f3b3e"
                android:textSize="16sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/magneticGradient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:background="@drawable/pane"
                android:inputType="number"
                android:textColor="#3f3b3e"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|center_horizontal"
                android:text="应       力       值  :"
                android:textAllCaps="false"
                android:textColor="#3f3b3e"
                android:textSize="16sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/stressValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:background="@drawable/pane"
                android:inputType="number"
                android:textColor="#3f3b3e"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

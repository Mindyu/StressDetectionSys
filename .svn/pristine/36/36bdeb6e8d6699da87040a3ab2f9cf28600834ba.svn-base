<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="44dp">

    <RadioButton
        android:id="@+id/text_radioButton"
        android:layout_marginLeft="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:button="@drawable/detection_object_radiobutton"
        android:focusable="false" />

    <TextView
        android:id="@+id/text_objectsName"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="1"
        android:text="对象"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_material"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="1"
        android:text="材质"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_model"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="1"
        android:text="型号"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_defectLevel"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:maxLines="1"
        android:text="非常严重"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_magneticGradient"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="1"
        android:text="梯度值"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_stressValue"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="1"
        android:text="应力值"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

</LinearLayout>